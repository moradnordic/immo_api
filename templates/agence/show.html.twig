{% extends 'base.html.twig' %}

{% block title %}{{ agence.name }} - Détails de l'Agence{% endblock %}

{% block body %}
    {# Breadcrumb #}
    <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="{{ path('app_home') }}" class="text-gray-700 hover:text-primary">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                    </svg>
                    Accueil
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-500">{{ agence.name }}</span>
                </div>
            </li>
        </ol>
    </nav>

    <div class="bg-white rounded-xl shadow-soft overflow-hidden">
        {# Agency Image Header as Logo #}
        {% if agence.imageFilename %}
            <div class="flex items-center px-6 py-4">
                <img src="{{ asset('uploads/images/' ~ agence.imageFilename) }}"
                     alt="{{ agence.name }} Logo"
                     class="w-16 h-16 object-contain mr-4">
                <h1 class="text-2xl md:text-3xl font-bold text-gray-900">
                    {{ agence.name }}
                </h1>
            </div>
        {% else %}
            <div class="px-6 pt-6">
                <h1 class="text-2xl md:text-3xl font-bold text-gray-900">
                    {{ agence.name }}
                </h1>
            </div>
        {% endif %}
    </div>


    {# Agency Details #}
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {# Contact Information #}
                <div class="space-y-4">
                    <h2 class="text-lg font-semibold text-gray-900">Informations de contact</h2>

                    <div class="space-y-3">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="w-5 h-5 text-primary mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Adresse</p>
                                <p class="text-sm text-gray-500">{{ agence.address }}</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="w-5 h-5 text-primary mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Téléphone</p>
                                <a href="tel:{{ agence.phone }}" class="text-sm text-primary hover:text-primary-dark">
                                    {{ agence.phone }}
                                </a>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="w-5 h-5 text-primary mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-gray-900">Email</p>
                                <a href="mailto:{{ agence.email }}" class="text-sm text-primary hover:text-primary-dark">
                                    {{ agence.email }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                {# Additional Information #}
                <div class="space-y-4">
                    <h2 class="text-lg font-semibold text-gray-900">Informations complémentaires</h2>
                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="text-sm text-gray-500">ID de l'agence</div>
                        <div class="text-sm font-medium text-gray-900 mt-1">#{{ agence.id }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_AGENCE') %}

    {# Action Buttons #}
    <div class="mt-6 flex items-center justify-between">
        <a href="{{ path('app_agence_index') }}"
           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
            <svg class="w-5 h-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Retour à la liste
        </a>

        <div class="flex space-x-3">
            <a href="{{ path('app_agence_edit', {'id': agence.id}) }}"
               class="inline-flex items-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                <svg class="w-5 h-5 mr-2 -ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            {{ include('agence/_delete_form.html.twig', {
                'button_attr': 'inline-flex items-center px-4 py-2 border border-transparent rounded-lg text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500'
            }) }}
            {% endif %}
        </div>
        {% endif %}

    </div>
{% endblock %}
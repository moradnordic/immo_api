{# templates/user/_delete_form.html.twig #}
<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="w-full px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
        Supprimer l'utilisateur
    </button>
</form>
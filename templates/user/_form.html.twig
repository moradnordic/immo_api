{# templates/user/_form.html.twig #}
<div class="bg-white p-6 rounded-lg shadow-sm">
    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
    <div class="grid gap-4 md:grid-cols-2">
        <div>
            {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'text-sm font-medium text-gray-700 mb-1 block'}}) }}
            {{ form_widget(form.name, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500',
                    'placeholder': 'Nom de l\'utilisateur'
                }
            }) }}
            {{ form_errors(form.name, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
        </div>

        <div>
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'text-sm font-medium text-gray-700 mb-1 block'}}) }}
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500',
                    'placeholder': 'email@exemple.com'
                }
            }) }}
            {{ form_errors(form.email, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
        </div>

         <div>
            {{ form_label(form.agence, 'Agence', {'label_attr': {'class': 'text-sm font-medium text-gray-700 mb-1 block'}}) }}
            {{ form_widget(form.agence, {
                'attr': {
                    'class': 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500',
                    'placeholder': 'agence'
                }
            }) }}
            {{ form_errors(form.email, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
        </div>

        {% if form.password is defined %}
            <div>
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'text-sm font-medium text-gray-700 mb-1 block'}}) }}
                {{ form_widget(form.password, {
                    'attr': {
                        'class': 'w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Mot de passe'
                    }
                }) }}
                {{ form_errors(form.password, {'attr': {'class': 'text-sm text-red-600 mt-1'}}) }}
            </div>
        {% endif %}
    </div>

    <div class="flex justify-end gap-2 mt-4">
        <a href="{{ path('app_user_index') }}" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded hover:bg-gray-50">
            Retour
        </a>
        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
    {{ form_end(form) }}
</div>
{# templates/user/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6">
        {# Header Section #}
        <div class="mb-6 flex justify-between items-center">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Modifier l'utilisateur</h1>
                <p class="mt-1 text-sm text-gray-600">Modifier les informations de l'utilisateur</p>
            </div>
            <a href="{{ path('app_user_index') }}"
               class="flex items-center text-sm text-gray-600 hover:text-gray-900">
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour à la liste
            </a>
        </div>

        {# Main Content #}
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
            {# Form Section #}
            <div class="lg:col-span-2">
                {{ include('user/_form.html.twig', {
                    'button_label': 'Mettre à jour'
                }) }}
            </div>

            {# Danger Zone #}
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow-sm p-6 border border-red-200">
                    <h2 class="text-lg font-medium text-red-700 mb-4">Zone de danger</h2>
                    <p class="text-sm text-gray-600 mb-4">
                        Attention : La suppression d'un utilisateur est une action irréversible.
                    </p>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
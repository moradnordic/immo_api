<div class="container my-5">
    <div class="card border-danger shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center mb-4 text-danger">Adresse</h2>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            <div class="form-group mb-3">
                {{ form_label(form.ville, null, {'label_attr': {'class': 'form-label text-danger'}}) }}
                {{ form_widget(form.ville, {'attr': {'class': 'form-control border-danger'}}) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.cartier, null, {'label_attr': {'class': 'form-label text-danger'}}) }}
                {{ form_widget(form.cartier, {'attr': {'class': 'form-control border-danger'}}) }}
            </div>

            <div class="text-center mt-4">
                <button class="btn btn-danger btn-lg">{{ button_label|default('Enregistrer') }}</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

{% extends 'base.html.twig' %}

{% block title %}Liste des Adresses{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4 text-danger">Liste des Adresses</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover border-danger">
                <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Ville</th>
                    <th>Cartier</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for address in addresses %}
                    <tr>
                        <td>{{ address.id }}</td>
                        <td>{{ address.ville }}</td>
                        <td>{{ address.cartier }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_address_show', {'id': address.id}) }}" class="btn btn-outline-info btn-sm">Afficher</a>
                            <a href="{{ path('app_address_edit', {'id': address.id}) }}" class="btn btn-outline-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_address_new') }}" class="btn btn-danger">Créer une nouvelle adresse</a>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Nouvelle Propriété - Étape 2{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Progress Bar -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="progress-wrapper">
                            <div class="progress mb-3" style="height: 10px;">
                                <div class="progress-bar bg-primary" role="progressbar"
                                     style="width: 66.66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-success"><i class="fas fa-check me-1"></i>1. Informations générales</small>
                                <small class="text-primary fw-bold">2. Détails spécifiques</small>
                                <small class="text-muted">3. Images</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Card -->
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-cogs me-2"></i>
                            Étape 2 : Détails spécifiques
                            <span class="badge bg-light text-dark ms-2">{{ propertyType|title }}</span>
                        </h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        {% if propertyType == 'appartement' %}
                            {% include 'property/forms/_appartement_fields.html.twig' %}
                        {% elseif propertyType in ['maison', 'villa'] %}
                            {% include 'property/forms/_maison_villa_fields.html.twig' %}
                        {% elseif propertyType == 'bureau' %}
                            {% include 'property/forms/_bureau_fields.html.twig' %}
                        {% elseif propertyType == 'magasin' %}
                            {% include 'property/forms/_magasin_fields.html.twig' %}
                        {% else %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Aucun champ spécifique requis pour ce type de propriété.
                            </div>
                        {% endif %}

                        <!-- Navigation Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_property_back_to_step1') }}" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-2"></i>Précédent
                            </a>
                            <div>
                                <a href="{{ path('app_property_new_cancel') }}" class="btn btn-secondary me-2">
                                    <i class="fas fa-times me-2"></i>Annuler
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    Suivant <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .progress-wrapper .progress {
            border-radius: 10px;
        }

        .form-label.fw-bold {
            color: #2c3e50;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid #dee2e6;
        }

        .form-control:focus, .form-select:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-color: #ced4da;
        }

        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .section-divider {
            border-top: 2px solid #e9ecef;
            margin: 2rem 0 1.5rem 0;
            padding-top: 1.5rem;
        }

        .section-title {
            color: #495057;
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}
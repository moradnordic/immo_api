{% set form_id = 'delete-form-' ~ property.id %}

<form method="post" id="{{ form_id }}" action="{{ path('app_property_delete', {'id': property.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette propriété?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button>
</form>
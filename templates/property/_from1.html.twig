<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get the property type select element
        const propertyTypeSelect = document.getElementById('property-type-select');

        // Get all property type specific field sections
        const propertyTypeFields = document.querySelectorAll('.property-type-fields');

        // Function to show fields based on selected property type
        function showFieldsForPropertyType(selectedType) {
            // Hide all property type specific fields
            propertyTypeFields.forEach(section => {
                section.style.display = 'none';
            });

            // Map the property types to their corresponding field sections
            const typeMapping = {
                'appartement': 'appartement',
                'maison': 'maison',
                'villa': 'maison', // Use same fields for villa as maison
                'ferme': 'maison',  // Use same fields for ferme as maison
                'bureau': 'bureau',
                'magasin': 'magasin'
            };

            // Get the mapped type (defaults to the selected type if no mapping exists)
            const mappedType = typeMapping[selectedType] || selectedType;

            // Show fields for the selected property type
            const fieldsToShow = document.getElementById(`${mappedType}-fields`);
            if (fieldsToShow) {
                fieldsToShow.style.display = 'block';
            }
        }

        // Show fields for the initially selected property type
        if (propertyTypeSelect) {
            showFieldsForPropertyType(propertyTypeSelect.value);

            // Add event listener for property type change
            propertyTypeSelect.addEventListener('change', function() {
                showFieldsForPropertyType(this.value);
            });
        }

        // Image upload functionality
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('image-files-input');
        const previewContainer = document.getElementById('newImagesPreview');

        if (dropZone && fileInput) {
            // Click on drop zone to trigger file input
            dropZone.addEventListener('click', () => {
                fileInput.click();
            });

            // Handle drag over
            dropZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                dropZone.classList.add('dragover');
            });

            // Handle drag leave
            dropZone.addEventListener('dragleave', () => {
                dropZone.classList.remove('dragover');
            });

            // Handle drop
            dropZone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropZone.classList.remove('dragover');

                if (e.dataTransfer.files.length) {
                    fileInput.files = e.dataTransfer.files;
                    previewImages(e.dataTransfer.files);
                }
            });

            // Handle file selection via input
            fileInput.addEventListener('change', function() {
                previewImages(this.files);
            });

            // Function to preview selected images
            function previewImages(files) {
                previewContainer.innerHTML = '';

                if (files.length > 0) {
                    Array.from(files).forEach(file => {
                        if (file.type.startsWith('image/')) {
                            const reader = new FileReader();
                            reader.onload = function(e) {
                                const previewItem = document.createElement('div');
                                previewItem.className = 'image-preview-item fade-in';

                                const img = document.createElement('img');
                                img.src = e.target.result;
                                img.alt = 'Image preview';

                                previewItem.appendChild(img);
                                previewContainer.appendChild(previewItem);
                            };
                            reader.readAsDataURL(file);
                        }
                    });
                }
            }
        }
    });
</script>
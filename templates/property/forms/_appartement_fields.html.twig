                {{ form_widget(form.dpeKwh, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                <span class="input-group-text">kWh/m²/an</span>
            </div>
            {{ form_errors(form.dpeKwh) }}
        </div>
    </div>

    <!-- Équipements Section -->
    <div class="col-12 mb-4 mt-4">
        <h6 class="section-title border-bottom pb-2">
            <i class="fas fa-cogs me-2 text-primary"></i>Équipements et Services
        </h6>
    </div>

    <div class="col-md-6 mb-3">
        <div class="row">
            <div class="col-6">
                <div class="form-check">
                    {{ form_widget(form.meubler, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.meubler, null, {'label_attr': {'class': 'form-check-label ms-2'}}) }}

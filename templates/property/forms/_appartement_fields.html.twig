                    {{ form_widget(form.chauffageIndividuel, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.chauffageIndividuel, null, {'label_attr': {'class': 'form-check-label ms-2'}}) }}
                </div>
            </div>
        </div>
    </div>

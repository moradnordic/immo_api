                </div>
            </div>
            <div class="col-6">
                <div class="form-check">
                    {{ form_widget(form.climatisation, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.climatisation, null, {'label_attr': {'class': 'form-check-label ms-2'}}) }}
                </div>
            </div>
        </div>

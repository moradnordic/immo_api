<!-- Magasin Specific Fields -->
<div class="row">
    <!-- Configuration de base Section -->
    <div class="col-12 mb-4">
        <h6 class="section-title border-bottom pb-2">
            <i class="fas fa-store me-2 text-primary"></i>Configuration de base
        </h6>
    </div>

    <div class="col-md-6 mb-3">
        <div class="form-group">
            {{ form_label(form.nombreNiveaux, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.nombreNiveaux, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
            {{ form_errors(form.nombreNiveaux) }}
        </div>
    </div>

    <div class="col-md-6 mb-3">
        <div class="form-group">
            {{ form_label(form.charges, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
